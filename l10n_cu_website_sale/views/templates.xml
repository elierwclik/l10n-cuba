<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="l10n_cu_website_sale_address" name="Address Management Cuban Localizations" inherit_id="website_sale.address">
        <xpath expr="//div[contains(@id, 'div_state')]" position="after">
            <div class="w-100"/>
            <div id="div_municipality" class="col-lg-6 mb-2"
                 t-att-style="not state_municipalities and 'display: none'">
                <label class="col-form-label" for="o_municipality_id">Municipality</label>
                <select id="o_municipality_id" name="municipality_id" class="form-select">
                    <option value="">Municipality...</option>
                    <t t-foreach="state_municipalities" t-as="m">
                        <option t-att-value="m.id" t-att-selected="m.id == municipality_id">
                            <t t-esc="m.name"/>
                        </option>
                    </t>
                </select>
            </div>
        </xpath>
    </template>

</odoo>
